{
  "name": "books-highlighter",
  "private": true,
  "dependencies": {
    "axios": "^0.21.1",
    "immer": "^3.2.0",
    "lint-staged": "^8.1.5",
    "moment": "^2.24.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-ga": "^2.5.7",
    "react-lottie": "^1.2.3",
    "react-redux": "^7.0.2",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.1.3",
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "@types/node": "^11.13.7",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^7.0.8",
    "@types/react-router-dom": "^4.3.1",
    "@types/reapop": "^1.1.5",
    "@types/styled-components": "^4.1.12",
    "compression-webpack-plugin": "^2.0.0",
    "css-loader": "2.1.1",
    "dotenv": "^8.0.0",
    "file-loader": "^3.0.1",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "json-loader": "^0.5.7",
    "prettier": "1.16.4",
    "reapop": "^2.0.1",
    "reapop-theme-wybo": "^1.0.2",
    "redux-logger": "^3.0.6",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  },
  "scripts": {
    "clean": "rimraf ./app/dist",
    "start": "npm run clean && webpack-dev-server --config webpack.config.dev.js --progress --colors --hot --debug --dev-tool source-map",
    "build": "npm run clean && webpack -p --config webpack.config.prd.js --progress --colors",
    "lint": "npm run tslint:check && npm run tslint && npm run prettier",
    "tslint:check": "tslint-config-prettier-check ./tslint.json",
    "tslint": "tslint -c ./tslint.json --fix ./{app/src,__tests__}/**/**/**/**/*.{ts,tsx} --project ./tsconfig.json --exclude ./node_modules",
    "prettier": "prettier --write ./{app/src,__tests__}/**/**/**/**/*.{ts,tsx}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "git add"
    ]
  }
}
